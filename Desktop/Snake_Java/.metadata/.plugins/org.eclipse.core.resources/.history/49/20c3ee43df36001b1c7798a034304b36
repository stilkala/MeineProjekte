package Game;

import java.util.concurrent.ThreadLocalRandom;

import GUI.Gui;

public class Essen {
private int x;
private int y;

public Essen() {
	this.x=ThreadLocalRandom.current().nextInt(1*32+Gui.xoff, 15*32+Gui.xoff);
	this.y=ThreadLocalRandom.current().nextInt(1*32+Gui.yoff, 15*32+Gui.yoff);
	
}

public void reset() {
	
	this.x=ThreadLocalRandom.current().nextInt(0*32+Gui.xoff, 15*32+Gui.xoff);
	this.y=ThreadLocalRandom.current().nextInt(0*32+Gui.yoff, 15*32+Gui.yoff);
	
}

public int getX() {
	return x;
}

public void setX(int x) {
	this.x = x;
}

public int getY() {
	return y;
}

public void setY(int y) {
	this.y = y;
}


}
