package Timer;

import Action.Collision;
import Game.Snake;

public class GameTimer extends Thread {
	
	public static boolean running =true;
	
	public void run() {
		
		try {
			sleep(200);
			Snake.move();
			Snake.waitToMove=false;
			Collision.colEssen();
			if(Collision.self()) {
				Snake.tl.clear();
			}
			if(Collision.wall()) {
				Snake.tl.clear();
				Snake.h.setX(7);
				Snake.h.setY(7);
			}
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}

}
